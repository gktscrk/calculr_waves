        <Label Content="kW" Grid.Column="4" HorizontalAlignment="Left" Margin="62,368,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="11" Height="25" Width="40"/>
        <Label x:Name="ResultkP" Content="" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="56" FontFamily="Tahoma" Grid.Column="4" Margin="2,368,0,0" FontSize="11"/>
        
        <r:Ribbon VerticalAlignment="Top" Grid.ColumnSpan="5" Height="110" Grid.RowSpan="2">
            <r:Ribbon.ApplicationMenu>
                <r:RibbonApplicationMenu Label="File" IsMainMenu="True">
                    <r:RibbonApplicationMenuItem Header="Open" 
                                                      Click="Open_MenuItem_Click"/> 
                    <r:RibbonSeparator />
                    <r:RibbonApplicationMenuItem Header="Save Project"
                                                      Click="SaveProject_MenuItem_Click"/>
                    <r:RibbonSeparator />
                    <r:RibbonApplicationMenuItem Header="Settings" 
                                                      Click="Settings_MenuItem_Click"/>
                    <r:RibbonApplicationMenuItem Header="Help" 
                                                      Click="Help_MenuItem_Click"/>
                    <r:RibbonSeparator />
                    <r:RibbonApplicationMenuItem Header="About"
                                                      Click="About_MenuItem_Click"/>
                    <r:RibbonSeparator />
                    <r:RibbonApplicationMenuItem Header="Null Data" 
                                                      Click="UnloadAllFiles_MenuItem_Click" />
                    <r:RibbonSeparator />
                    <r:RibbonApplicationMenuItem Header="Exit"  
                                                      Click="Exit_MenuItem_Click"/>
